<resources>

    <style name="Instrumple" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="home_item_style_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="home_item_style_img">
        <item name="android:layout_width">@dimen/image_dimension</item>
        <item name="android:layout_height">@dimen/image_dimension</item>
        <item name="android:layout_margin">@dimen/image_padding_or_margin</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="home_item_style_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="introduction_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/home_top_height</item>
    </style>

    <style name="introduction_img">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:alpha">0.4</item>
        <item name="android:background">@drawable/home_img</item>
        <item name="android:contentDescription">@string/home_background</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="introduction_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="android:layout_marginLeft">48dp</item>
        <item name="android:layout_marginRight">48dp</item>
    </style>

    <style name="list_item_btn">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="list_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">54dp</item>
    </style>

    <style name="list_item_clickable_wrapper">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="list_item_wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:background">#5e5e5e</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="list_item_img">
        <item name="android:layout_width">@dimen/item_img_dim</item>
        <item name="android:layout_height">@dimen/item_img_dim</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="player_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:padding">@dimen/text_margin</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="status_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="now_playing">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">9</item>
    </style>

    <style name="sample_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:contentDescription">@string/sample_content_desc</item>
    </style>
</resources>